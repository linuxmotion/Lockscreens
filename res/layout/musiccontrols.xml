<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/music_controls_layout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  

  	
  <ImageView  android:id="@+id/play_pause_button" 
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            
  
  	/>
  	 <ImageView android:id="@+id/rewind_button" 
  	  		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_pause_button"
            android:src="@drawable/lock_ic_media_previous"
  	/>
  	   <ImageView  android:id="@+id/fast_forward_button" 
    		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
  			android:layout_toRightOf="@id/play_pause_button"
  	/>
  
  
  
  
</RelativeLayout>
